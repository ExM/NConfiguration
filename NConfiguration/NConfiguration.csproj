<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>3.0.0</Version>
    <Description>C# library for convenient operation with configurations of one or groups of applications. The library supports work with standard XML configurations and  included files in format of XML, JSON, or the INI.</Description>
    <Company>ExM</Company>
    <Authors>Anatoliy Koperin &lt;a.koperin@gmail.com&gt;</Authors>
    <Copyright>LGPLv3 Copyright © 2019 Anatoliy Koperin &lt;a.koperin@gmail.com&gt;</Copyright>
    <PackageProjectUrl>https://github.com/ExM/NConfiguration</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/ExM/NConfiguration/blob/master/License.txt</PackageLicenseUrl>
    <PackageIconUrl>https://raw.github.com/ExM/NConfiguration/master/NuGet/Icon_details.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/ExM/NConfiguration</RepositoryUrl>
    <PackageTags>configuration config admin reload</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyOriginatorKeyFile>NConfiguration.snk</AssemblyOriginatorKeyFile>
    <PublicSign>false</PublicSign>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>
  <Import Project="..\.paket\Paket.Restore.targets" />
</Project>